@model List<SIGA.Web.Areas.SIGA.Models.DescritorModel>
@{


}
<div class="panel panel-default">
    <div class="panel-heading">
        <strong>Campos do Documento</strong>
    </div>
    <table class="table">
        @foreach (var item in Model)
        {
            <tr>
                <td class="col-xs-6 col-sm-4">
                    <label>@item.NomeDescritor</label>
                </td>
                <td>
                    @if (@item.TipoDados == 1)
                    {
                        <input type="date" value="01/01/2014" />
                    }
                    if (@item.TipoDados ==2)
                    {
                        <input type="number" value="123" />
                    }
                    if (@item.TipoDados == 3)
                    {
                        <input type="text" value="Fernarnando Lozer Lichyenheld" />
                    }
                </td>
            </tr>
        }

    </table>

</div>