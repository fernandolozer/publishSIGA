@model SIGA.Entities.Models.Contrato

@{
    ViewBag.Title = "Contrato";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Create", "Contratos", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
