@using GridMvc.Html
@model IEnumerable<SIGA.Entities.Models.Historico>

@{
    ViewBag.Title = "Histórico";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <div class="widget-box">
        <div class="widget-header">
            <h5 class="widget-title bigger lighter">
                <i class="ace-icon fa fa-table"></i>
                Histórico
            </h5>
        </div>

        <div class="widget-body">
            <div class="widget-main no-padding">
                <div>
                    @Html.Grid(Model).SetLanguage("pt-br").Columns(g =>
                        {
                            g.Add(n => n.Usuario.UserName).Titled("Usuário");
                            g.Add(n => n.IdRegistroHistorico).Titled("Id Registro");
                            g.Add(n => n.IdTipoFuncionalidade).Titled("Funcionalidade");
                            g.Add(n => n.DataRegistroHistorico).Titled("Data Registro").Format("{0:dd-MM-yyyy HH:mm}");
                            g.Add(n => n.Descricao).Titled("Descrição");
                            g.Add()
                                .Css("action-buttons")
                                .SetWidth(30)
                                .Titled("Ação")
                                .Encoded(false)
                                .Sanitized(false)
                                .RenderValueAs(p =>
                                    //@Html.ActionLink(" ", "Details", new { id = p.IdHistorico }, new { @class = "blue ace-icon fa fa-search-plus bigger-140", @title = "Visualizar" }).ToHtmlString() +
                                    @Html.ActionLink(" ", "Edit", new { id = p.IdHistorico }, new { @class = "green ace-icon fa fa-pencil bigger-140", @title = "Editar" }).ToHtmlString());
                        }).WithPaging(50).Sortable(true).Filterable(true).Selectable(false)
                </div>
            </div>
        </div>
    </div>
</div>


