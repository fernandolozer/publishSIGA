<div class="col-sm-12">
    <div class="widget-box">
        <div class="widget-header">
            <h5 class="widget-title bigger lighter">
                <i class="ace-icon fa fa-table"></i>
                Grupo
            </h5>
        </div>

        <div class="widget-body">
            <div class="widget-main no-padding">
                <table class="table table-striped table-bordered table-hover">
                    <tr>
                        <th>
                            Nome
                        </th>
                        <th style="width: 100px">
                            Ações
                        </th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                <div class="action-buttons">
                                    <a class="blue" href="@Url.Action("Details", new { id = item.Id })">
                                        <i class="ace-icon fa fa-search-plus bigger-140"></i>
                                    </a>

                                    <a class="green" href="@Url.Action("Edit", new { id = item.Id })">
                                        <i class="ace-icon fa fa-pencil bigger-140"></i>
                                    </a>

                                    <a class="red" href="@Url.Action("Delete", new { id = item.Id })">
                                        <i class="ace-icon fa fa-trash-o bigger-140"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }

                </table>

            </div>
        </div>
    </div>
</div><!-- /.span -->
