@model SIGA.Entities.Models.Galpao

@{
    ViewBag.Title = "Galpão";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript">
    $(function () {
        $("#@Html.IdFor(model => model.Endereco.CEPEndereco)").mask("99999-999");
        $("#@Html.IdFor(model => model.Endereco.NumeroEndereco)").ForceNumericOnly();
    });
</script>

