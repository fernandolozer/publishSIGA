            @Html.LabelFor(model => model.NomeGalpao, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NomeGalpao, new { htmlAttributes = new { @class = "form-control" } })
